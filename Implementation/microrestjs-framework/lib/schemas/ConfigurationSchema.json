{
    "title": "Microrestjs Configuration Specification",
    "type": "object",
    "properties": {
        "services": {
            "type": "object",
            "properties": {
                "path": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "required": ["path"]
        }, 

        "server": {
            "type": "object",
            "properties": {
                "port": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 65535
                }
            },
            "required": ["port"]
        }, 

        "logger": {
            "type": "object",
            "properties": {
                "enable": {
                    "type": "boolean"
                },
                "level": {
                    "type": "string"
                }
            },
            "required": ["enable", "level"]
        }
    },
    "required": ["services", "server", "logger"]
}
